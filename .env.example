# =============================================
# ENVIRONMENT VARIABLES - SECURITY NOTICE
# =============================================
# 
# NEVER commit real keys to version control!
# 
# For Vercel deployment:
# 1. Go to your Vercel project dashboard
# 2. Settings → Environment Variables
# 3. Add each variable with its actual value
# 
# =============================================

# Database (Supabase)
# Get from: Supabase Dashboard → Settings → Database
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres?pgbouncer=true&connection_limit=1"
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase HTTP API (New Key Scheme - 2025 Ready)
# Publishable key: safe to expose on web/mobile/desktop
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=sb_publishable_XXXXXXXXXXXXXXXXXXXXXXXX

# Secret key: server-side only (replaces service_role). Never expose to client.
SUPABASE_SECRET_KEY=sb_secret_XXXXXXXXXXXXXXXXXXXXXXXX

# Legacy (backwards compatibility) – will be removed by Supabase in late 2026.
# The code prefers the new keys above, and falls back to these if present.
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=anon_XXXXXXXXXXXXXXXXXXXXXXXX
SUPABASE_SERVICE_ROLE_KEY=service_role_XXXXXXXXXXXXXXXXXXXXXXXX

# Clerk Authentication (Optional)
# Only needed if you choose to use an external Clerk account portal alongside Supabase.
# Get from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
CLERK_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/welcome
# Fallback redirects if using account portal:
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/welcome

# AI is FREE with Puter.js - No API keys needed!
# Puter.js provides free GPT-4o, GPT-5, DALL-E access
# No configuration required - just include the script tag

# Optional: Hugging Face (also free)
# HF_API_TOKEN=your_hugging_face_token_optional

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=TheGridHub
NEXT_PUBLIC_COMPANY_NAME=TheGridHub
NEXT_PUBLIC_DOMAIN=thegridhub.co

# Internal Admin (cookie-based guard)
# Set strong unique values in local and production environments
THEGRIDHUB_ADMIN=admin
THEGRIDHUB_ADMIN_PW=change_me
# Optional operator role with limited permissions
THEGRIDHUB_OPERATOR=operator
THEGRIDHUB_OPERATOR_PW=change_me_operator

# Encryption Key for internal admin cookie signing (and other crypto utils)
# 32+ random bytes base64 or hex. Example (PowerShell): [guid]::NewGuid().ToString('N') + [guid]::NewGuid().ToString('N')
ENCRYPTION_MASTER_KEY=please_replace_with_strong_secret

# TheGridHub Enterprise Integrations
# Microsoft Office 365
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_tenant_id

# Google Workspace
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-app.example/api/integrations/google/callback
# Optional: Service account JSON (base64 or plain JSON)
# GOOGLE_SERVICE_ACCOUNT_JSON='{"type":"service_account", ... }'

# Slack Integration
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_BOT_TOKEN=your_slack_bot_token

# Jira Integration
JIRA_CLIENT_ID=your_jira_client_id
JIRA_CLIENT_SECRET=your_jira_client_secret
# Optional convenience for self-hosted Jira flow and testing endpoints
JIRA_DOMAIN=yourcompany.atlassian.net
JIRA_EMAIL=you@yourcompany.com

# Teams Integration
TEAMS_APP_ID=your_teams_app_id
TEAMS_APP_PASSWORD=your_teams_app_password
