{
  "name": "thegridhub",
  "version": "1.0.0",
  "description": "The Modern Task Management Platform for Growing Teams - Enterprise integrations at startup pricing",
  "homepage": "https://thegridhub.co",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheGridHub/TheGridHub.git"
  },
  "keywords": [
    "task management",
    "project management",
    "team collaboration",
    "enterprise",
    "productivity",
    "slack",
    "jira",
    "microsoft teams",
    "google workspace"
  ],
  "author": "TheGridHub Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "node scripts/migrate-supabase-sql.js && node scripts/prisma-db-push-if-enabled.js",
    "build": "next build",
    "build:static": "next build && next export",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:check": "npm audit --audit-level=high",
    "pre-commit": "npm run lint && npm run type-check && npm run security:check",
    "security:validate": "echo 'Running security validation...' && npm audit && npm run lint && npm run type-check",
    "quick-start": "node scripts/quick-start.js",
    "stripe:bootstrap": "node scripts/stripe/bootstrap.js",
    "db:push": "npx prisma db push",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "e2e:smoke": "node scripts/smoke.js",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^6.3.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.47.10",
    "@vercel/analytics": "^1.3.1",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express-rate-limit": "^8.0.1",
    "googleapis": "^159.0.0",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.469.0",
    "@lottiefiles/dotlottie-react": "^0.15.2",
    "next": "^15.2.4",
    "pg": "^8.11.3",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^6.0.2",
    "stripe": "^18.5.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.15",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.8.7",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.2.4",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "prisma": "^6.3.0",
    "typescript": "^5.6.3"
  }
}
